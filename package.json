{
  "name": "twitch-midi",
  "version": "3.0.0",
  "description": "A Twitch bot that allows viewers to control your MIDI setup",
  "type": "module",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "build": "tsc",
    "lint": "eslint -c .eslintrc.json --ext .ts src/**/*.ts",
    "format": "eslint --fix -c .eslintrc.json --ext .ts src/{,**/}*.ts",
    "watch-build": "tsc -w",
    "serve": "npm run build && npm run start",
    "start": "node ./lib/index.js",
    "clean": "del-cli dist package",
    "ncc": "ncc build src/index.ts -m -o dist -e jazz-midi",
    "esbuild": "esbuild lib/index.js --bundle --platform=node --target=node18 --external:jazz-midi --outdir=dist",
    "package": "pkg . -o package/TwitchMIDI",
    "prezip": "cpy assets/* package && cpy package.json package",
    "zip": "cd package && bestzip ../TwitchMIDI.zip *",
    "bundle": "npm run clean && npm run esbuild && npm run package && npm run zip"
  },
  "keywords": [
    "midi",
    "twitch",
    "chatbot",
    "jzz"
  ],
  "author": "rafaelpernil2",
  "license": "ISC",
  "dependencies": {
    "@twurple/api": "^6.2.1",
    "@twurple/auth": "^6.2.1",
    "@twurple/chat": "^6.2.1",
    "@twurple/pubsub": "^6.2.1",
    "chalk": "^4.1.2",
    "dotenv": "^16.1.3",
    "harmonics": "^1.1.0",
    "i18next": "^22.5.0",
    "jzz": "^1.6.4",
    "nanotimer": "^0.3.15"
  },
  "pkg": {
    "assets": [
      "./node_modules/jazz-midi"
    ],
    "targets": [
      "node18-windows-x64",
      "node18-linux-x64",
      "node18-macos-x64"
    ]
  },
  "devDependencies": {
    "@types/nanotimer": "^0.3.0",
    "@types/node": "^20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "bestzip": "^2.2.1",
    "cpy-cli": "^4.2.0",
    "del-cli": "^5.0.0",
    "esbuild": "^0.17.19",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "pkg": "^5.8.1",
    "prettier": "^2.8.8",
    "typescript": "^5.0.4"
  },
  "prettier": {
    "printWidth": 180,
    "trailingComma": "none",
    "singleQuote": true,
    "tabWidth": 4,
    "endOfLine": "auto"
  },
  "bin": "dist/index.js"
}
